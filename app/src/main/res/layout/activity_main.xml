<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        />

    <TextView
        android:id="@+id/tv_app_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is an old app"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        />

    <Button
        android:id="@+id/tv_start_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始BsDiff合并"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        />

    <Button
        android:id="@+id/tv_start_archive_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始archive—patch合并"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        />

    <Button
        android:id="@+id/tv_hdiifpatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始hdiifpatch合并"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        />
</LinearLayout>